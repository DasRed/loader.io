{
    "name": "loader.io",
    "version": "1.0.0",
    "main": "src/index.js",
    "scripts": {
        "build": "rollup -c",
        "commit": "git-cz",
        "publish:check": "semantic-release --branch master --no-ci --dry-run",
        "prepublishOnly": "npm run build && npm run semantic-release -- --no-ci",
        "semantic-release": "semantic-release",
        "test": "jest --coverage",
        "test:coverage": "jest --ci --coverage --runInBand --reporters=default --reporters=jest-junit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DasRed/loader.io.git"
    },
    "author": "DasRed",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DasRed/loader.io/issues"
    },
    "homepage": "https://github.com/DasRed/loader.io#readme",
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-optional-chaining": "^7.12.1",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "babel-jest": "^26.6.3",
        "commitizen": "^4.2.2",
        "core-js": "^3.7.0",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-junit": "^12.0.0",
        "qs": "^6.5.2",
        "rollup": "^2.33.3",
        "rollup-plugin-clear": "^2.0.7",
        "rollup-plugin-terser": "^7.0.2",
        "semantic-release": "^17.2.4",
        "whatwg-fetch": "^3.5.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "files": [
        "dist/*",
        "src/*",
        "!src/**/[__tests__]*"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "header-max-length": [
                2,
                "always",
                200
            ],
            "scope-case": [
                1,
                "always",
                [
                    "upper-case",
                    "lower-case",
                    "pascal-case",
                    "start-case"
                ]
            ],
            "subject-case": [
                1,
                "always",
                [
                    "sentence-case",
                    "lower-case",
                    "start-case"
                ]
            ]
        }
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github"
        ],
        "prepare": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "assets": [
                    "package.json",
                    "package-lock.json",
                    "CHANGELOG.md"
                ]
            }
        ]
    },
    "jest": {
        "roots": [
            "src/"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "moduleNameMapper": {
            "(.*.min.js)": "<rootDir>/src/__mocks__/$1"
        },
        "moduleFileExtensions": [
            "js"
        ],
        "testRegex": "\\.test\\.js$",
        "testPathIgnorePatterns": [
            "node_modules"
        ],
        "bail": false,
        "verbose": true,
        "transformIgnorePatterns": [
            "node_modules"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/__tests__/jest.setup.js"
        ],
        "coverageDirectory": "coverage/jest",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!**/__tests__/**",
            "!**/__mocks__/**"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "jest-junit": {
        "outputDirectory": "./coverage/jest",
        "outputName": "results.xml"
    }
}
